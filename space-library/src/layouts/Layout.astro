---
import Footer from "../components/Footer.astro";
const {
  title = "The Cosmos Library",
  description = "Exploring the frontiers of space, AI, and orbital engineering",
  children
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/main.css" />
    <slot name="head" />
  </head>

  <body>
    <!-- Header -->
    <header class="site-header">
      <nav class="navbar">
        <a href="/" class="logo">
          <img src="/images/space_rd.jpg" alt="Cosmos Library Logo" />
        </a>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/library">Library</a></li>
          <li><a href="/aboutme">About Me</a></li>
        </ul>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="page-content">
      <slot /> <!-- âœ… THIS is the correct way to render children -->
    </main>

    <!-- Footer -->
    <Footer />
  </body>
</html>
