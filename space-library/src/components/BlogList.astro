---
type Post = {
  title: string;
  slug: string;
  description: string;
  date: string;
};

const { posts } = Astro.props as { posts: Post[] };
---

<div class="blog-grid">
  {posts.map((post) => (
    <a href={`/blog/${post.slug}`} class="blog-card">
      <h2>{post.title}</h2>
      <p>{post.description}</p>
      <small>{new Date(post.date).toLocaleDateString()}</small>
    </a>
  ))}
</div>
